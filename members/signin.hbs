{{!< ../default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The content area on the member signin page --}}
<main id="main" class="site-main">
	<div class="site-signin inner">

		{{#if @member}}

			{{!-- Logged in: Redirect home --}}
			<script>window.location = '{{@site.url}}';</script>

		{{else}}

			{{!-- Not logged in: Signin form --}}
			<header class="page-header">
				<h1 class="page-title underline">{{t "Welcome Back!"}}</h1>
			</header><!-- .page-header -->

			<div class="page-content">
				<div class="subscribe-box">
					<p class="intro">{{t "Sign in to your account to access premium content."}}</p>
					{{> "member-signin-form"}}
					<p class="note">{{t "Don't have an account yet?"}} <a href="{{@site.url}}/signup/">{{t "Sign up"}}</a></p>
				</div><!-- .subscribe-box -->
			</div><!-- .page-content -->

		{{/if}}

	</div><!-- .site-signin -->
</main><!-- .site-main -->
