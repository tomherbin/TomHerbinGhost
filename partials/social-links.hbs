{{!-- Social links list --}}
<div class="social-links">
	{{#if @site.facebook}}
	<a href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
	{{/if}}
	{{#if @site.twitter}}
	<a href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
	{{/if}}
	{{#if @site.instagram}}
	<a href="{{instagram_url}}" target="_blank" rel="noopener">{{> "icons/instagram"}}</a>
	{{/if}}
</div><!-- .social-links -->
