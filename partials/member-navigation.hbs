{{!-- Members menu --}}
<ul class="members-menu">
	{{#if @member}}
	<li class="signout-link"><a class="button outlined" href="#/portal/signout" data-members-signout>{{t "Sign out"}}</a></li>
	<li class="account-link"><a href="#/portal/account/">{{t "View Account"}}</a></li>
	{{else}}
	<li class="signin-link"><a class="button outlined" href="#/portal/signin">{{t "Sign in"}}</a></li>
	<li class="signup-link">{{t "Need an account?"}} <a href="#/portal/signup">{{t "Sign up"}}</a></li>
	{{/if}}
</ul><!-- .memebers-menu -->
